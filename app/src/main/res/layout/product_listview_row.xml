<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>
    <ImageView
        android:id="@+id/productRowImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="12.5dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12.5dp">

        <TextView
            android:id="@+id/productRowTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book of Books"
            android:textSize="16dp"
            android:textStyle="bold|italic"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/productRowSpecsTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="16dp"
                android:text="AuthorName Nameson"
                android:textSize="12dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/productRowSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Summary of the Book and stuff."
                android:textSize="12dp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>